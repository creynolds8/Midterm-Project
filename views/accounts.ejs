<header><%- include('partials/_navbar') %></header>

<body>
<div class="outer-div">

  <section class="categories">
    <div class="categories-header">
      <h2>Categories</h2>
    </div>
    <p class="category-name" onclick="loadAccounts()">All Accounts</p>
    <p class="category-name" onclick="loadAccountsByCategory(1)">Social Media</p>
    <p class="category-name" onclick="loadAccountsByCategory(2)">Financial</p>
    <p class="category-name" onclick="loadAccountsByCategory(3)">Email</p>
