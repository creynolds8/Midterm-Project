    <p class="category-name" onclick="loadAccountsByCategory(8)">Security</p>
  </section>
  <section class="main-accounts">
    <div class="accounts-header">
      <h2 class="table-title">Accounts</h2>
      <a href="/createnewaccount">
        <button class="account-button">CREATE NEW ACCOUNT</button>
      </a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Website:</th>
          <th>Username:</th>
          <th></th>
          <th>Password:</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="accounts"></tbody>
    </table>
  </section>
</div>
